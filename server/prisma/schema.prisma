datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  accounts    Account[]
  createdAt   DateTime  @default(now())
  firstName   String?
  guns        Gun[]
  id          String    @id @default(cuid())
  lastName    String?
  password    String
  phoneNumber Int
  roles       String[]
  updatedAt   DateTime  @updatedAt
  username    String    @unique
}

model Account {
  amount      Float?
  balance     Float?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  transaction String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Location {
  address   String?
  country   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Gun {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  message   User?    @relation(fields: [messageId], references: [id])
  messageId String?
  name      String?
  updatedAt DateTime @updatedAt
}